<!-- views/admin-users.ejs -->
<section>
    <div>
        <h2>Panel de usuarios</h2>
        <div class="alert alert-info" role="alert">
            <strong>info</strong> Aca podras manejar todo lo relacionado con los usuarios
        </div>
        <p>Utiliza los botones del panel para elegir operaciones</p>
    </div>

    <!-- BUILDINGS END -->
    <!-- Horizontal split line -->
    <div class="row">
        <div class="col">
            <hr class="split-line">
        </div>
    </div>

    <div class="mb-5">
        <h3>Creacion de usuarios</h3>
        <div>
            <!-- USER FORM -->
            <form action="/admin/user/create" method="POST">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="name">Nombre</label>
                            <input type="text" class="form-control" name="name" id="name"
                                aria-describedby="user-name-small" placeholder="Nombre de ejemplo" required>
                            <small id="user-name-small" class="form-text text-muted">Ingresa el nombre del propietario
                                del
                                usuario</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" name="password" id="password"
                                aria-describedby="password-small" placeholder="Contraseña ejemplo" required>
                            <small id="password-small" class="form-text text-muted">Ingresa una contraseña para el
                                usuario</small>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            <label for="Worker_area_id">Tipo de usuario</label>
                            <select class="form-control custom-select" name="Worker_area_id" id="Worker_area_id"
                                required>
                                <option disabled selected>-- SELECCIONAR --</option>
                                <!-- FOR with variable data.worker_areas -->
                                <% data.worker_areas.forEach(worker_area=> { %>
                                    <option value="<%= worker_area.id %>">
                                        <%= worker_area.name %>
                                    </option>
                                    <% }); %>

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="authorized">Autorizar</label>
                            <select class="custom-select" name="authorized" id="authorized" required>
                                <option disbaled selected>-- SELECCIONAR --</option>
                                <option value="true">Autorizar</option>
                                <option value="false">Invalidar</option>
                            </select>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Registrar</button>
            </form>
            <!-- END USER FORM -->
        </div>
    </div>

    <!-- BUILDINGS END -->
    <!-- Horizontal split line -->
    <div class="row">
        <div class="col">
            <hr class="split-line">
        </div>
    </div>
    <div>
        <h4>Otras operaciones de usuarios</h4>
        <div class="row justify-content-center">
            <div class="col-sm-3 mb-3 mt-3">
                <a name="user-list" id="user-list" class="btn btn-primary btn-block" href="/admin/user/search/all"
                    role="button">Listar</a>
            </div>
            <div class="col-sm-3 mb-3 mt-3">
                <form action="/admin/user/search" method="GET">
                    <div class="form-group">
                        <label for="user">Usuario</label>
                        <input type="text" class="form-control" name="user" id="user" aria-describedby="user-small"
                            placeholder="Usuario ej. AMD1">
                        <small id="user-small" class="form-text text-muted mb-3 mt-1">Ingresa el nombre del usuario a
                            buscar</small>
                        <button type="submit" class="btn btn-outline-primary btn-block">Buscar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
